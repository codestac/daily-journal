<%- include("partials/header") -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <div class="mb-3">
                <label class="form-label" for="">Title</label>
                <input class="form-control" type="text" name="postTitle" placeholder="data">
            </div>
            <div class="mb-3">
                <label class="form-label" for="">Post</label>
                <textarea class="form-control" name="postBody" id="" cols="30" rows="5"></textarea>
            </div>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
    <%- include( "partials/footer") -%>